{
  "name": "property-business-api",
  "version": "1.0.0",
  "description": "property-business-api using speccy to merge modular OAS spec files.",
  "scripts": {
    "oasMerge": "speccy resolve resources/public/api/conf/$VERSION/application_modular.yaml -o target/scala-2.12/classes/public/api/conf/$VERSION/application.yaml",
    "oasMergeVerbose": "speccy resolve resources/public/api/conf/$VERSION/application_modular.yaml -o target/scala-2.12/classes/public/api/conf/$VERSION/application.yaml -v"
  },
  "preferGlobal": true,
  "devDependencies": {
    "speccy": "^0.11.0"
  }
}
