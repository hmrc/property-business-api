{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "For any TY 2025-26 onwards",
  "description": "This endpoint enables you to retrieve the periodic income and expenses for a Foreign Property business. A National Insurance number, business ID, and tax year are required. Please note that this endpoint is only available for tax years starting from 2025-26.",
  "type": "object",
  "properties": {
    "submittedOn": {
      "type": "string",
      "description": "The date the foreign property was submitted, in the format `YYYY-MM-DDThh:mm:ss.SSSZ`",
      "example": "2025-07-07T10:59:47.544Z"
    },
    "fromDate": {
      "type": "string",
      "description": "The first day that the income and expenses period summary covers. Must conform to the format YYYY-MM-DD",
      "example": "2025-01-01"
    },
    "toDate": {
      "type": "string",
      "description": "The last day that the income and expenses period summary covers. Must conform to the format YYYY-MM-DD",
      "example": "2026-01-31"
    },
    "foreignProperty": {
      "type": "array",
      "description": "Array holding the income and expenses of the user's foreign property business for the period.",
      "foreignPropertyEntry": {
        "type": "object",
        "properties": {
          "countryCode": {
            "type": "string",
            "description": "A three-letter code that represents a country name. ISO 3166-1 Alpha-3 value.",
            "example": "AFG"
          },
          "income": {
            "type": "object",
            "properties": {
              "rentIncome": {
                "type": "object",
                "properties": {
                  "rentAmount": {
                    "type": "number",
                    "description": "Total rent and other income from property. Up to 2 decimal places.",
                    "multipleOf": 0.01,
                    "minimum": 0.00,
                    "maximum": 99999999999.99,
                    "example": 440.31
                  }
                }
              },
              "foreignTaxCreditRelief": {
                "type": "boolean",
                "description": "Indicates whether Foreign Tax Credit Relief (FTCR) has been claimed.",
                "example": false
              },
              "premiumsOfLeaseGrant": {
                "type": "number",
                "description": "Premiums received for the grant of a lease.",
                "multipleOf": 0.01,
                "minimum": 0.00,
                "maximum": 99999999999.99,
                "example": 950.48
              },
              "otherPropertyIncome": {
                "type": "number",
                "description": "Other income from property, e.g., rent charges and ground rents.",
                "multipleOf": 0.01,
                "minimum": 0.00,
                "maximum": 99999999999.99,
                "example": 802.49
              },
              "foreignTaxPaidOrDeducted": {
                "type": "number",
                "description": "Total amount of foreign tax paid or deducted.",
                "multipleOf": 0.01,
                "minimum": 0.00,
                "maximum": 99999999999.99,
                "example": 734.18
              },
              "specialWithholdingTaxOrUkTaxPaid": {
                "type": "number",
                "description": "Tax withheld (in UK Pounds) on certain payments.",
                "multipleOf": 0.01,
                "minimum": 0.00,
                "maximum": 99999999999.99,
                "example": 85.47
              }
            },
            "required": ["foreignTaxCreditRelief"],
            "additionalProperties": false
          },
          "expenses": {
            "type": "object",
            "properties": {
              "premisesRunningCosts": {
                "type": "number",
                "description": "Rent, rates, insurance, ground rents and other costs.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": -4929.50
              },
              "repairsAndMaintenance": {
                "type": "number",
                "description": "Property repairs and maintenance.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": -54.30
              },
              "financialCosts": {
                "type": "number",
                "description": "Loan interest and other financial costs.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": 2090.35
              },
              "professionalFees": {
                "type": "number",
                "description": "Legal, management and other professional fees.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": -90.20
              },
              "travelCosts": {
                "type": "number",
                "description": "Car, van and travel costs incurred in running a property business.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": 560.99
              },
              "costOfServices": {
                "type": "number",
                "description": "Cost of services provided, including wages.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": -100.83
              },
              "residentialFinancialCost": {
                "type": "number",
                "description": "Residential financial cost deductible from rental income.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": 857.78
              },
              "broughtFwdResidentialFinancialCost": {
                "type": "number",
                "description": "Amount of relief brought forward for restricted residential financial costs.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": 600.10
              },
              "other": {
                "type": "number",
                "description": "Other allowable property expenses.",
                "multipleOf": 0.01,
                "minimum": -99999999999.99,
                "maximum": 99999999999.99,
                "example": 334.64
              }
            },
            "required": ["countryCode"],
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "submittedOn",
    "fromDate",
    "toDate",
    "foreignProperty"
  ],
  "additionalProperties": false
}
